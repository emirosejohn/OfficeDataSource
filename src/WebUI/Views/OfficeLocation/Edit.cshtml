@model OfficeLocationMicroservice.WebUi.Models.OfficeModel

@{
    ViewBag.Title = "Edit";
}

<head>
    @*<link href="SharedOfficelocationStyles.css" rel="stylesheet" />*@
    <style>
        .editPanel {
            position: absolute;
            margin: 10px;
            padding: 10px;
            width: 100%;
            z-index: 100;
            background: aquamarine;
        }


        div.card {
            width: 320px;
            height: 230px;
            background: grey;
            margin: 10px;
            padding: 10px;
            display: inline-table;
            overflow: hidden;
        }

        .details {
            margin: 10px;
        }

        h4 {
            color: black;
            text-align: center;
        }

        h2 {
            text-align: center;
        }

        .cardContainer {
            z-index: 10;
            align-content: center;
            justify-content: center;
            flex-wrap: wrap;
            display: flex;
        }

        .myContainer {
            margin-top: 50px;
            justify-content: center;
            flex-wrap: wrap;
            display: flex;
            width: 100%;
        }

        .modal {
            top: 100px;
        }

        textarea {
            margin: 2px;
            background: aquamarine;
            border: 
        }
    </style>
</head>

<body>
    <h2>Office Locations</h2>
    <div class="myContainer">

        <div class="cardContainer">
            @foreach (var office in Model.Offices)
            {
                <div class="card">
                    <h4>@office.Name</h4>
                    <div class="details">
                        @office.Id <br />
                        @office.Address <br />
                        @office.Country <br />
                        Switchboard:
                        @office.Switchboard <br />
                        Fax: @office.Fax <br />
                        @office.TimeZone <br />
                        @office.Operating
                    </div>

                </div>
            }

        </div>

        <div class="modal show">
            <div class="modal-dialog">
                <div class="modal-content">
                
                    <div class="modal-header">
                        <h4 class="modal-title">Edit</h4>
                    </div>

                    <div class="modal-body">
                        
                            @using (Html.BeginForm())
                            {
                                @Html.TextBox("Name"); <br/>
                                @Html.TextArea("Address");
                                
                            }


                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save changes</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script language="JavaScript" type="text/javascript" src="/Scripts/jquery-1.10.2.js"></script>
    <script language="JavaScript" type="text/javascript" src="/Scripts/jquery-1.10.2.min.js"></script>

